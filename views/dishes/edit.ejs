<% include ../partials/header %>
<div class="container">
 <div class="row">
     <h1 style="text-align: center">Edit the dish</h1>
     <div style="width: 30%; margin: 25px auto;">
<form action="/dishes/<%= dish._id%>/?_method=PUT" method="POST">
    <div class="form-group">  <!--form-group is used to make the length same for below three items -->
    <!--to edit the dish, have to pass the current value to the form, so use value attribute -->
    <input class="form-control" type="text" name="dish[name]" value="<%= dish.name%>" >   <!--the Name attribute is the key to pass the value back to post page -->
    </div>
    <div class="form-group">
    <input class="form-control" type="text" name="dish[image]" value="<%= dish.image%>" >
    </div>
    <div class="form-group">
    <input class="form-control" type="text" name="dish[description]" value="<%= dish.description%>" >
    </div>
    <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Submit</button>   <!--btn-primary class will make the button color change -->
    </div>
</form>
        <a href="/dishes">Go Back</a>
     </div>
 
</div>
</div>
<% include ../partials/footer %>